class Solution {
  public:
    int largest(vector<int> &arr) {
        // code here
        int n = arr.size();
        if(n==1)
        {
            return arr[0];
        }
        int max = arr[0];
        for(int i=0;i<=n-1;i++)
        {
            if(arr[i]>max)
            {
                max = arr[i];
                
            }
        }
        return max;
    }
};


